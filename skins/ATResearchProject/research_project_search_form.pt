            <div class="field" tal:define="portal_types portal/portal_types">
                <label i18n:translate="label_item_type">Type</label>

                <div class="formHelp" i18n:translate="help_search_item_type">
                Return items of a specific type.
                </div>
    
                <div style="float:left; margin-right: 2em;"
                     tal:define="allTypes python:putils.getUserFriendlyTypes(typesList=['ResearchProject', 'ResearchSubproject',]);">
                    <tal:tabindex define="tabindex tabindex/next">
                    <select multiple="multiple"
                            name="portal_type:list"
                            id="portal_type"
                            >
                        <option
                            tal:repeat="type allTypes"
                            value="#"
                            class="noborder"
                            selected="selected"
                            tabindex=""
                            tal:attributes="value type;
                                            tabindex tabindex;
                                            id string:portal_type_${type}">
                        <span i18n:translate=""
                          tal:content="python: portal_types.getTypeInfo(type).Title()"
                          /> (<span tal:content="type" />)
                        </option>
                    </select>
                    <br />
                    </tal:tabindex>
                </div>
            </div>

            <div class="visualClear" id="clear-space-before-author"><!-- --></div>
            <br />

